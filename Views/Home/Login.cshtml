@using PruebaChatMVC.ViewModel
@model LoginRegisterUserViewModel
<section class="dataInputBody">
    <form class="dataInputForm" asp-action="Login" asp-controller="Home" method="post">
        <h1 class="title">Iniciar Sesion</h1>
        <div class="input">
            <label class="label" asp-for="@Model.UserName">Usuario: </label>
            <input class="inputText" type="text" asp-for="@Model.UserName" placeholder="Ingrese Usuario" />
            <span class="errorValidation" asp-validation-for="@Model.UserName" ></span>
        </div>
        <div class="input">
            <label class="label" asp-for="@Model.Pasword">Contraseña: </label>
            <input class="inputText" type="password" asp-for="@Model.Pasword" placeholder="Ingrese Contraseña" />
            <span class="errorValidation" asp-validation-for="@Model.Pasword"></span>
        </div>
        <div class="summaryErrors" asp-validation-summary="ModelOnly"></div>
        <div class="controllersButton">
            <a class="ancleToAction" asp-action="Register" asp-controller="Home">Registrar nuevo usuario</a>
            <button class="button" type="submit">Ingresar</button>
        </div>
    </form>
</section>